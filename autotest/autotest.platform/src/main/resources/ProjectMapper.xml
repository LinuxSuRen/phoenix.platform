<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+类名 -->
<mapper namespace="org.suren.autotest.platform.mapping.ProjectMapper">
	<resultMap type="org.suren.autotest.platform.model.Project" id="projectMap">
		<result property="ownerId" column="owner_id"/>
		<result property="createTime" column="create_time"/>
	</resultMap>
	
	<select id="getById" resultType="Project">
		select * from project where id = #{id}
	</select>
	
	<select id="getAll" resultMap="projectMap">
		select * from project
	</select>
	
	<insert id="save">
		<selectKey keyProperty="id" resultType="String" order="BEFORE">
			SELECT UUID()
		</selectKey>
		
		insert into project (id, owner_id, name, remark, create_time) values (
			#{id}, #{ownerId}, #{name}, #{remark}, #{createTime}
		)
	</insert>
	
	<delete id="delById">
		delete from project where id = #{id}
	</delete>
</mapper>